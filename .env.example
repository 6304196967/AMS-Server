# Sample Environment Configuration for AMS Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/ams_db
# Or for MySQL:
# DATABASE_URL=mysql://username:password@localhost/ams_db

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=serviceAccountKey.json
# Or use absolute path in production:
# FIREBASE_CREDENTIALS_PATH=/path/to/serviceAccountKey.json

# CORS Configuration (Frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006
# In production, add your deployed frontend URL

# Notification Settings
OTP_EXPIRY_SECONDS=45
SCHEDULE_CLEANUP_DAYS=100
FCM_BATCH_SIZE=500

# Email Configuration (if needed in future)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Application Settings
DEBUG=True
PORT=5000
HOST=0.0.0.0

# Security
# In production, generate a strong secret key:
# python -c "import secrets; print(secrets.token_hex(32))"
